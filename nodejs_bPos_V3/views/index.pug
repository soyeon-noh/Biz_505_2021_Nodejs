extends layout

block content
	script(src="/js/table.js")
	style.
		section.main {
			display: flex;
			flex-wrap: wrap;

			justify-content:center;
			align-items: center;
		}
		div.table {
			width: 200px;
			height: 100px;
			border: 1px solid green;
			margin: 10px;

			text-align: center;
			line-height: 100px; /* box크기와 똑같이하면 세로정렬이된다. */

			background-color: #A67360;
			color: white;
			font-weight: bold;
			font-size: 20px;

			cursor: pointer;
		}
		div.table:hover {
			box-shadow: 2px 2px 2px #090A0D;
		}

		div.order_yes {
		background-color: #00aa00;
		}

	each table,index in TABLES
		if(table.order_count > 0)
			div.table.order_yes(data-table_id= table.id) !{table.table_name}	
				span (!{table.order_count})
		else
			div.table(data-table_id= table.id) !{table.table_name}	
